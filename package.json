{
  "name": "webapp",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"vite\" \"tailwindcss -i ./src/style.css -o ./public/static/style.css --watch\"",
    "dev:sandbox": "wrangler pages dev dist --ip 0.0.0.0 --port 3000",
    "dev:d1": "wrangler pages dev dist --d1=mas-alla-del-miedo-db --local --ip 0.0.0.0 --port 3000",
    "build:css": "tailwindcss -i ./src/style.css -o ./public/static/style.css --minify",
    "build": "npm run build:css && vite build",
    "preview": "wrangler pages dev dist",
    "deploy": "npm run build && wrangler pages deploy dist",
    "deploy:prod": "npm run build && wrangler pages deploy dist --project-name madm",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "test": "curl http://localhost:3000",
    "db:migrate:local": "wrangler d1 migrations apply mas-alla-del-miedo-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply mas-alla-del-miedo-db --remote",
    "db:console:local": "wrangler d1 execute mas-alla-del-miedo-db --local",
    "db:console:prod": "wrangler d1 execute mas-alla-del-miedo-db --remote",
    "git:commit": "git add . && git commit -m",
    "git:status": "git status"
  },
  "dependencies": {
    "@paypal/paypal-server-sdk": "^2.1.0",
    "@types/diff": "^7.0.2",
    "bcryptjs": "^3.0.3",
    "diff": "^8.0.3",
    "hono": "^4.10.7",
    "stripe": "^20.1.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250705.0",
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "@tailwindcss/cli": "^4.1.18",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.0.0",
    "vite": "^6.4.1",
    "wrangler": "^4.4.0"
  },
  "engines": {
    "node": ">=20.18.1"
  }
}
